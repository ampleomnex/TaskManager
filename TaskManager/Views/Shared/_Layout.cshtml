<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" title="more options">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Task Manager", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Task", "Index", "Home")</li>
                    <li>@Html.ActionLink("Reports", "About", "Home")</li>

                    <li class="dropdown">
                        <a data-toggle="dropdown" class="dropdown-toggle" href="#"><span class="glyphicon glyphicon-list-alt"></span> Manage <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action("Index", "Home")"><span class="glyphicon glyphicon-user"></span> Employee</a></li>
                            <li><a href="@Url.Action("Index", "Home")"><span class="glyphicon glyphicon-tasks"></span> Project</a></li>
                            <li><a href="@Url.Action("Index", "Functions")"><span class="glyphicon glyphicon-align-justify"></span> Function</a></li>
                            <li><a href="@Url.Action("Index", "Home")"><span class="glyphicon glyphicon-pencil"></span> Role</a></li>
                            <li><a href="@Url.Action("Index", "Home")"><span class="glyphicon glyphicon-align-justify"></span> Epic</a></li>
                            <li><a href="@Url.Action("Index", "Home")"><span class="glyphicon glyphicon-pencil"></span> Team</a></li>
                            <li><a href="@Url.Action("Index", "Home")"><span class="glyphicon glyphicon-align-justify"></span> Customer</a></li>
                            <li><a href="@Url.Action("Index", "Departments")"><span class="glyphicon glyphicon-pencil"></span> Department</a></li>

                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
       

        <footer class="navbar-fixed-bottom">
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
